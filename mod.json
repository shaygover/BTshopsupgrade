{
    "Name": "SLDFItemsInShops",
    "Enabled": true,

    "Version": "0.5.7",
    "Description": "Adds uncommon, rare and SLDF items to Arano restoration shops",
    "Author": "tharbad08",
    "Website": "https://github.com/shaygover/BTshopsupgrade",
    "Contact": "Use github Issues",

    "Manifest": [
        { "Type": "MechDef", "Path": "mech", "ShouldMergeJSON": true },
        { "Type": "WeaponDef", "Path": "weapon", "ShouldMergeJSON": true },
        { "Type": "StarSystemDef", "Path": "starsystem", "ShouldMergeJSON": true },
        { "Type": "AmmunitionBoxDef", "Path": "ammunitionBox", "ShouldMergeJSON": true },
        { "Type": "StarSystemDef", "Path": "starsystem", "ShouldMergeJSON": true },
        { "Type": "ItemCollectionDef", "Path": "items" },
        { "Type": "ItemCollectionDef", "Path": "itemsAppend", "ShouldAppendText": true },
        { "Type": "UpgradeDef", "Path": "gear", "ShouldMergeJSON": true }
    ]
} 
